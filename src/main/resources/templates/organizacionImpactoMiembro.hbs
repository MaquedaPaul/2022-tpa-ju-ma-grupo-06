{{#partial "content"}}
    <h2>Impacto de un miembro</h2>
    <div class="divArreglo" id="main-section">
        <form class="claseForm" method="get" action="/home/calculadora-hc/impacto-de-miembro">
            <input type="search" name="miembro" value="" placeholder="Ingrese nombre y apellido del miembro" required>
            <button type="submit">Enviar</button>
        </form>
        <fieldset>
            {{#if miembroNoNull}}
            {{#if comprobacion}}
            <p>Nombre: {{nombre}}</p>
            <p>Apellido: {{apellido}}</p>
            <p>Impacto: %{{impacto}}</p>
                {{else}}
                <p>Nombre: {{nombre}}</p>
                <p>Apellido: {{apellido}}</p>
                <p>Impacto: %{{impacto}}</p>
                Error: el miembro ingresado no pertenece a la organizacion
            {{/if}}
{{else}}
    Error: el miembro no existe
{{/if}}
        </fieldset>
    </div>
{{/partial}}

