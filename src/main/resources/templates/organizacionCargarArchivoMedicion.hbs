{{#partial "content"}}
    <h2>Cargar Archivo Mediciones</h2>
    <form enctype="multipart/form-data" method="post" id="id-form" class="flex-clm form form-evo-hc">
        <h4>Aceptados:<span class="green"> .CSV</span></h4>
        <label for="fileSelect"><h3>Arrastre o haga click para subir:</h3></label>
        <input class="white-button-drop" id="fileSelect" type="file"
               name="uploaded_file"
               accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"/>
        <div>
            <button type="submit" form="id-form" formaction="/home/mediciones"
                    class="btn-2 first">
                Atrás
            </button>
            <button id="ingresar" type="submit" form="id-form" formmethod="post"
                    class="btn-consulta destacar">
                Guardar
            </button>
        </div>
        {{#if ingresoValido}}
            Archivo CSV subido correctamente
        {{/if}}
        {{#if formatoNoValido}}
            <div class="btn-error firstError">{{error}} </div>

        {{/if}}
        {{#if sinArchivo}}
            No se subió ningún archivo
        {{/if}}
    </form>

{{/partial}}

