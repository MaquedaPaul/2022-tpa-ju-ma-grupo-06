{{#partial "usuario"}}
    {{usuario}}
{{/partial}}

{{#partial "content"}}
    <h2>Solicitar Vinculacion</h2>
    <form action="/home/vinculacion" method="POST">
        <div>
            <label for="tipo-consumo"><h3>Organización</h3></label>
            <label for="selector-organizacion"></label>
            <select id="selector-organizacion" name="organizacionSolicitada" class="flex-clm form form-evo-hc">
                {{#each organizaciones}}
                    <option value="{{razonSocial}}">{{razonSocial}}</option>
                {{/each}}
            </select>
        </div>
        <div>
            <label for="tipo-consumo"><h3>Sector</h3></label>
            <label for="sectores"></label>
            <select id="sectores" name="sectorSolicitado" class="flex-clm form form-evo-hc">
                {{#each nombreSectores}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="below-buttons">
            {{#if sinOrganizaciones}}
                <button type="button" class="btn-consulta-disabled">Solicitar</button>
            {{else}}
                <button type="submit" class="btn-consulta destacar">Solicitar</button>
            {{/if}}



        </div>
        {{#if errorSector}}
            <div class="btn-error firstError">El sector seleccionado no existe en la organización</div>
        {{/if}}
        {{#if errorOrganizacion}}
            <div class="btn-error firstError">Hubo un error en el campo organización</div>
        {{/if}}
        {{#if exitoVinculacion}}
            <div class="btn-success firstSuccess">Vinculación solicitada exitosamente</div>
        {{/if}}

        {{#if yaHayVinculacionPendiente}}
            <div class="btn-error firstError">Ya existe una vinculación pendiente con esa organización</div>
        {{/if}}
    </form>
{{/partial}}

