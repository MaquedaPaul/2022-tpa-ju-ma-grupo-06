{{#partial "usuario"}}
    {{usuario}}
{{/partial}}

{{#partial "content"}}
    <h2>Solicitar Vinculacion</h2>
    <form action="/home/vinculacion" method="POST">
        <div>
            Seleccione organización
            <label for="selector-organizacion"></label>
            <input class="white-button" name="Buscador-organizacion" list="organizaciones" type="search" id="selector-organizacion">
            <datalist id="organizaciones">
                {{#each organizaciones}}
                 <option value="{{razonSocial}}"/>
                {{/each}}
            </datalist>
        </div>
        <div>
            Seleccione sector
            <label for="selector-sector"></label>
            <input class="white-button" list="sectores" name="Buscador-organizacion" value="" type="search" id="selector-sector">
            <datalist id="sectores">
                            {{#each sectores}}
                             <option value="{{nombre}}"/>
                            {{/each}}
                        </datalist>
        </div>
        <div class="below-buttons">
                <a class="option-button" href="/home">
                   Atrás
                </a>
                <a class="option-button">
                    Ingresar
                </a>
        </div>
    </form>
{{/partial}}

